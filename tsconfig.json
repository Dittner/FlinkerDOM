{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noEmit": false,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}

